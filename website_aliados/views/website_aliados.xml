<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate='0'>
        <template id="aliados" name="Aliados">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty">
                    <section class="s_banner parallax s_parallax_is_fixed pt96 pb96 s_parallax_no_overflow_hidden" data-scroll-background-ratio="1" data-name="Banner" style="background-image: none;">
                        <span class="s_parallax_bg oe_img_bg oe_custom_bg o_bg_img_opt_custom" style="background-image: url(/website_aliados/static/img/mapa-aliados-banner.jpg); background-size: auto; background-position: 50% 50%;"/>
                        <div class="container">
                            <div class="row s_nb_column_fixed">
                                <div class="col-lg-7 jumbotron rounded pt32 pb32" data-name="Box" style="background-color: rgba(250,250,250,0.8)">
                                    <div class="row">
                                        <div class="col-lg-12 s_title s_col_no_bgcolor" data-name="Title">
                                            <h2 class="s_title_thin">
                                                <b>Siempre Tendrás un Aliado Cerca, Búscalo en Nuestro Mapa de Aliados&amp;nbsp;</b>
                                            </h2>
                                        </div>
                                        <div class="col-lg-12 pt8 s_col_no_bgcolor pb0" data-name="Text">
                                            <h3 class="lead">Todos nuestros aliados en mismo mapa, con su información de contacto y todas los descuentos que la red tiene para ti.</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="i_aliados_map_filters">
                        <div class="container">
                            <div class="row">
                                <div class='filters-container col-10 offset-1 col-sm-12 offset-sm-0 col-md-12 col-lg-4'>
                                    <form action="" method="GET" id='aliados_filter'>
                                        <div class="col-sm-12 filters-container-title">
                                            <h2>Filtros</h2>
                                        </div>
                                        <section class='aliados-filters'>
                                            <div>
                                                <label for="js_aliado_id">Busca por Aliado</label>
                                                <select name="aliado_id" id="js_aliado_id" multiple="multiple">
                                                    <option value="all" selected="">Todos los Aliados</option>
                                                </select>
                                            </div>
                                            <div>
                                                <label for="js_aliado_city_id">Busca por Ciudad</label>
                                                <select name="aliado_city_id" id="js_aliado_city_id" multiple="multiple">
                                                    <option value="all" selected="">Todas las Ciudades</option>
                                                </select>
                                            </div>
                                            <div>
                                                <label for="js_aliado_category_id">Busca por Etiquetas</label>
                                                <select name="aliado_category_id" id="js_aliado_category_id" multiple="multiple">
                                                    <option value="all" selected="">Todas las Categorias</option>
                                                </select>
                                            </div>
                                            <br/>
                                            <div>
                                                <button id='js_filter_search_button' class="btn btn-primary col-sm-12">Buscar</button>
                                            </div>
                                        </section>
                                    </form>
                                </div>
                                <div class="col-10 offset-1 col-sm-12 offset-sm-0 col-md-12 col-lg-8">
                                    <section class="s_leaflet_map" id="leaflet-map-container-aliados" data-name="Leaflet Map">
                                        <div class="container">
                                            <div id="leaflet-map-container-aliados-map"/>
                                        </div>
                                    </section>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </t>
        </template>
    </data>
</odoo>
