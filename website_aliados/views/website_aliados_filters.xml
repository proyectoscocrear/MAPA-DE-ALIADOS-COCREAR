<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate='0'>
        <template id="aliados_filters" name="Filtros Aliados">

            <div class='filters-container col-10 offset-1 col-sm-12 offset-sm-0 col-md-12 col-lg-4'>
                <form action="" method="GET" id='aliados_filter'>
                    <div class="col-sm-12 filters-container-title">
                        <h2>Filtros</h2>
                    </div>
                    <section class='aliados-filters'>
                        <div>
                            <label for="js_aliado_id">Busca por Aliado</label>
                            <select name="aliado_id" id="js_aliado_id" multiple="multiple">
                                <option value="all" selected="">Todos los Aliados</option>
                            </select>
                        </div>
                        <div>
                            <label for="js_aliado_city_id">Busca por Ciudad</label>
                            <select name="aliado_city_id" id="js_aliado_city_id" multiple="multiple">
                                <option value="all" selected="">Todas las Ciudades</option>
                            </select>
                        </div>
                        <div>
                            <label for="js_aliado_category_id">Busca por Etiquetas</label>
                            <select name="aliado_category_id" id="js_aliado_category_id" multiple="multiple">
                                <option value="all" selected="">Todas las Categorias</option>
                            </select>
                        </div>
                        <br/>
                        <div>
                            <button id='js_filter_search_button' class="btn btn-primary col-sm-12">Buscar</button>
                        </div>
                    </section>
                </form>
            </div>

        </template>
    </data>
</odoo>
